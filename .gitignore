# =============== #
# Unity Generated #
# =============== #

/Library/
# Unity caches Library, do not commit

/Temp/
/Logs/
/UserSettings/
# Temporary & user-specific files, ignore these

# Avoid committing crash reports
/*.pidb
/*.suo
/*.svd
/*.userprefs
/*.mode1v3
/*.mode2v3
/*.wlf

# ================ #
# Visual Studio / JetBrains Rider #
# ================ #
/.vscode/
*.csproj
*.unityproj
*.sln
*.suo
*.tmp
*.user
*.userosscache
*.pidb
*.booproj
*.svd
*.pdb
*.opendb
*.VC.db

# ================= #
# Unity Build Files #
# ================= #

/Builds/
# Ignore all exported builds (Windows, macOS, etc.)

/Assets/StreamingAssets/
/*.apk
/*.aab
/*.exe
/*.app
/*.unitypackage
/*.zip

# ========================= #
# Unity Auto-generated Meta #
# ========================= #
/*.meta
# Keep .meta files since Unity requires them for asset tracking

